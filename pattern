x=int(input("Enter the number: "))

for i in range(0,x,1):
    for j in range(0,i+1,1):
        print("*",end=" ")
    print("\n")    
    
for i in range(x-1,0,-1):
    for j in range(i,0,-1):
        print("*",end=" ")
    print("\n")    
    
    
    
    
    
    
    
    
    
