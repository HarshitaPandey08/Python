x=int(input("Enter the Number: "))
f=1
for i in range(1,x+1,1):
    f=f*i
print(f)



**********************************
x=int(input("Enter the Number: "))
f=1
if x<0:
    print("Factorial does not exist for numbers less than 0")
elif x==0:
    print("Factorial of 0 is 1")
else:
    for i in range(1,x+1,1):
        f=f*i
    print(f)
