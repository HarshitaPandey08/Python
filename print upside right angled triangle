x=int(input("Enter the number: "))
for i in range(1,x+1,1):
    for j in range(x,0,-1):
   
        print(j,end=" ")
    x=x-1
    print("\n")



******** An alternate more efficient solution could be **************
n = 5
k = 5
for i in range(0,n+1):
    for j in range(k-i,0,-1):
        print(j,end=' ')
    print()
